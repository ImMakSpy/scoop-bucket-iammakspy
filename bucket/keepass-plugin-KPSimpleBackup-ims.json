{
    "version": "1.4.0",
    "description": "Backup Plugin for KeePass2 (compatible with IOProtocolExt)",
    "homepage": "https://github.com/marvinweber/KPSimpleBackup",
    "license": "GPL-3.0-only",
    "depends": "extras/keepass",
    "url": "https://github.com/marvinweber/KPSimpleBackup/releases/download/v1.4.0/KPSimpleBackup-v1.4.0.zip",
    "hash": "7091cefbaf1e06d5231af748187b060498ff2b6bc9ba39d806ad31e611d52fb4",
    "installer": {
        "script": [
            "Copy-Item \"$dir\\dlls\\*.dll\" \"$(appdir keepass $global)\\current\\Plugins\"",
            "Copy-Item \"$dir\\plgx\\KPSimpleBackup.plgx\" \"$(appdir keepass $global)\\current\\Plugins\""
        ]
    },
    "uninstaller": {
        "script": [
            "Get-Item \"$(appdir keepass $global)\\current\\Plugins\\KPSimpleBackup.*\" | Remove-Item -Force",
        "Remove-Item \"$(appdir keepass $global)\\current\\Plugins\\Ookii.Dialogs.WinForms.dll\""
        ]
    },
    "checkver": {
        "url": "https://github.com/marvinweber/KPSimpleBackup/rss?path=/",
        "regex": "KPSimpleBackup-v([\\d.]+)\\.zip"
    },
    "autoupdate": {
        "url": "https://github.com/marvinweber/KPSimpleBackup/releases/download/v$version/KPSimpleBackup-v$version.zip"
    }
}
